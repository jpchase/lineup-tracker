#!/usr/bin/env node

const fs = require('fs');
const path = require('path');

const packageName = process.env.npm_package_name;
const packageDirectory = process.env.PWD;

if (packageName === 'redux') {
  const sourceFile = path.join(packageDirectory, 'es', 'redux.mjs');
  const destFile = sourceFile + '.js';

  fs.copyFileSync(sourceFile, destFile);

  console.log(`Redux ES workaround: Copied ${sourceFile} to ${destFile}`);
}
